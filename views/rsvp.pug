extends layout

block content
  section#intro
    .container
      .row
        .seven.columns
          h2.title Confirm Attendance
          p Enter your invite code to confirm your team’s attendance.
  section#request.grey
    .container
      .row
        .twelve.columns
          .card.form
            // <h3 class="form-title mono">Invite Form</h3>
            form.mono(action='/request', method='post')
              label(for='inviteCode') Invite code:
              input#inviteCode(type='text', name='inviteCode', placeholder='Invite code', required='')
              input(type='submit', value='Confirm Attendance')
  section
    .container
      .row
        .six.columns.event
          h2.title Uber
          p.grey-text.mono.participant-count For new users only
          p
            | This time around, we’re partnering with Uber to ferry teams to and from the event.
          p
            | First time riders can avail the promo code by accessing the promotions tab within the Uber app.
        .six.columns.event.center
          h2.title.placeholder  
          p.grey-text.mono.participant-count Valid only on the day of the event
          code.center.mono MINETX
